{
  "name": "angular-enterprise-blueprint",
  "version": "1.1.0",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false",
    "test:file": "ng test --watch=false --include",
    "test:file:coverage": "ng test --watch=false --coverage --include",
    "test:watch": "ng test --watch",
    "test:coverage": "ng test --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "lint": "eslint \"src/**/*.{ts,html}\"",
    "prepare": "husky",
    "storybook": "npm run docs:json && ng run angular-enterprise-blueprint:storybook",
    "build-storybook": "npm run docs:json && ng run angular-enterprise-blueprint:build-storybook",
    "test-storybook": "test-storybook",
    "docs": "compodoc -p tsconfig.doc.json -d docs/api --theme material",
    "docs:build": "compodoc -p tsconfig.doc.json -d dist/documentation --theme material",
    "docs:serve": "compodoc -p tsconfig.doc.json -d docs/api --theme material -s",
    "docs:json": "compodoc -p .storybook/tsconfig.doc.json -e json -d .",
    "analyze": "ng build --source-map=true --named-chunks=true --stats-json && source-map-explorer dist/angular-enterprise-blueprint/browser/**/*.js",
    "release": "commit-and-tag-version",
    "release:first": "commit-and-tag-version --first-release",
    "prettier": "prettier --write .",
    "lint:md": "markdownlint-cli2 '**/*.md' '#node_modules'",
    "postinstall": "node scripts/ensure-env.js"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-organize-imports"
    ],
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "lint-staged": {
    "*.{ts,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,mjs,scss,json,yml,yaml}": "prettier --write",
    "*.md": [
      "markdownlint-cli2 --fix",
      "prettier --write"
    ]
  },
  "private": true,
  "packageManager": "npm@11.7.0",
  "overrides": {
    "qs": "^6.14.1"
  },
  "dependencies": {
    "@angular/cdk": "^21.0.6",
    "@angular/common": "^21.0.8",
    "@angular/compiler": "^21.0.8",
    "@angular/core": "^21.0.8",
    "@angular/forms": "^21.0.8",
    "@angular/platform-browser": "^21.0.8",
    "@angular/router": "^21.0.8",
    "@jsverse/transloco": "^8.2.0",
    "@ng-icons/core": "^33.0.0",
    "@ng-icons/heroicons": "^33.0.0",
    "@ng-icons/ionicons": "^33.0.0",
    "@ng-icons/material-icons": "^33.0.0",
    "@ngrx/operators": "^21.0.1",
    "@ngrx/signals": "^21.0.0",
    "marked": "^17.0.1",
    "ngx-markdown": "^21.0.1",
    "prismjs": "^1.30.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.2100.5",
    "@angular-devkit/build-angular": "^21.0.5",
    "@angular-devkit/core": "^21.0.5",
    "@angular/build": "^21.0.5",
    "@angular/cli": "^21.0.5",
    "@angular/compiler-cli": "^21.0.8",
    "@angular/platform-browser-dynamic": "^21.0.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@compodoc/compodoc": "^1.1.32",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-onboarding": "^10.1.10",
    "@storybook/angular": "^10.1.10",
    "@storybook/test-runner": "^0.24.2",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-istanbul": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "angular-eslint": "^21.1.0",
    "axe-playwright": "^2.2.2",
    "commit-and-tag-version": "^12.6.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-storybook": "^10.1.10",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "source-map-explorer": "^2.5.3",
    "storybook": "^10.1.10",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.50.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.3"
  }
}
